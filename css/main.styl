@import "reset"
@import "fonts"

:root
  font-size 16px
body
  font-family 'adobe-clean', Helvetica, Arial, sans-serif
  color #033351
  line-height 1.75rem
  -webkit-font-smoothing antialiased
.bounds
  max-width 1280px
  position relative
  margin 0 auto
.text-bounds
  @extend .bounds
  max-width 600px

@import "header"

.button--cta
  border-radius: 4px
  background: #f4b504
  color: white
  text-transform: uppercase
  border: none
  font-size: 1.0625rem
  font-weight: normal
  padding: 8px 27px 10px
  text-decoration: none
  display: inline-block
  &:hover
    text-decoration: none
    background: #f2a700
